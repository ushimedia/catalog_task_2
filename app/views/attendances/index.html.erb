<div class="container-fluid text-center">

<%= render 'form', attendance: @attendance %>



<H3><%= @user.name %>/スケジュール・実績一覧</H3>
<div class="row">
<div class="col d-flex justify-content-around">


<%= month_calendar events: @attendances do |date, attendances| %>
  
  <%= date %>
 

  <% attendances.each do |attendance| %>
    <div>
        <td><%= attendance.attendance_time.strftime("%-H時%-M分") %></td>
        <td><%= attendance.leave_office_time %></td>
        <td><%= attendance.user_id %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
  <% end %>
<% end %>


<br>



</div>

</div>
<%= link_to 'New Attendance', new_attendance_path %>
</div>
